<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="no.vegetarguide.scanner.wizard.MaybeVegan.MaybeVeganFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/maybe_vegan_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:text="Inneholdet produktet andre ingredienser fra dyr? Kryss av for det varen inneholder:"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <CheckBox
            android:layout_marginTop="10dp"
            android:id="@+id/animal_milk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maybe_vegan_headline"
            android:text="Dyremelk eller ingredienser laget av dyremelk?\n(Laktose, melkesukker, myse, kasein og ghee.)"
            android:checked="false" />


        <CheckBox
            android:id="@+id/animal_eggs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Egg eller ingredienser laget av egg?\n(Eggehvite/albumin, eggeprotein og lysosomer (E1105).)"
            android:checked="false"
            android:layout_below="@+id/animal_milk"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <CheckBox
            android:id="@+id/insect_excretions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Honning eller andre ingredienser som kommer fra insekter?\n(Dronning-gelÃ©, bivoks (E901) og shellakk (E904).)"
            android:checked="false"
            android:layout_below="@+id/animal_eggs"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <EditText
            android:id="@+id/maybe_vegan_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/insect_excretions"
            android:hint="Hva inneholder varen av ekskreter fra dyrekropper?" />


        <Button
            android:id="@+id/maybe_vegan_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/maybe_vegan_comment"
            android:layout_marginTop="10dp"
            android:text="Videre" />

        <Button
            android:id="@+id/maybe_vegan_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maybe_vegan_comment"
            android:layout_toLeftOf="@+id/maybe_vegan_next_button"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:text="Avbryt" />

    </RelativeLayout>

</ScrollView>