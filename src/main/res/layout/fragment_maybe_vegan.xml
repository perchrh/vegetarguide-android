<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="no.vegetarguide.scanner.wizard.MaybeVegan.MaybeVeganFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/maybe_vegan_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Inneholdet produktet andre ingredienser fra dyr? Kryss av for det varen inneholder:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:id="@+id/contains_animal_milk_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maybe_vegan_headline"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/contains_animal_milk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dyremelk eller ingredienser laget av dyremelk?" />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:onClick="showToolTip"
                android:src="@android:drawable/ic_menu_help" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contains_eggs_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contains_animal_milk_row"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/contains_eggs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Egg eller ingredienser laget av egg?" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:onClick="showToolTip"
                android:src="@android:drawable/ic_menu_help" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/contains_honey_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contains_eggs_row"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/contains_honey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Honning eller andre ingredienser som kommer fra insekter?" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:onClick="showToolTip"
                android:src="@android:drawable/ic_menu_help" />

        </LinearLayout>


        <!-- TODO show this if any of the checkboxes are true -->
        <EditText
            android:id="@+id/maybe_vegan_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contains_honey_row"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:hint="Hva inneholder varen av ekskreter fra dyrekropper?" />


        <Button
            android:id="@+id/maybe_vegan_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/maybe_vegan_comment"
            android:layout_marginTop="10dp"
            android:text="Videre" />

        <Button
            android:id="@+id/maybe_vegan_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maybe_vegan_comment"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/maybe_vegan_next_button"
            android:text="Tilbake" />

    </RelativeLayout>

</ScrollView>