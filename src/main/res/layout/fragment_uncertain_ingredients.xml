<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="no.vegetarguide.scanner.wizard.UncertainIngredients.UncertainIngredientsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/uncertain_ingredients_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Inneholdet produktet tilsetningsstoffer som kan komme fra dyr? Kryss av for det varen inneholder:"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <CheckBox
            android:layout_marginTop="10dp"
            android:id="@+id/animal_e_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uncertain_ingredients_headline"
            android:text="E-stoffer som kan ha animalsk opprinnelse  (LENKE)" />


        <CheckBox
            android:id="@+id/other_animal_derived_additives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andre tilsetningsstoffer som kan ha animalsk opprinnelse (LENKE)"
            android:layout_below="@+id/animal_e_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/manufacturer_confirms_vegan"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produsenten har bekreftet at produktet er vegansk"
            android:layout_below="@+id/other_animal_derived_additives"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <EditText
            android:id="@+id/uncertain_ingredients_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/manufacturer_confirms_vegan"
            android:minLines="2"
            android:hint="Lim inn dokumentasjon fra produsent her, eller gi et kort sammendrag" />


        <Button
            android:id="@+id/uncertain_ingredients_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/uncertain_ingredients_comment"
            android:layout_marginTop="10dp"
            android:text="Send inn" />

        <Button
            android:id="@+id/uncertain_ingredients_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uncertain_ingredients_comment"
            android:layout_toLeftOf="@+id/uncertain_ingredients_next_button"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:text="@string/action_previous" />

    </RelativeLayout>

</ScrollView>