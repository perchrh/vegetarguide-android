<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="no.vegetarguide.scanner.wizard.ObviouslyNotVegetarian.ObviouslyNotVegetarianFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/maybe_vegetarian_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:text="Inneholdet produktet biter av dyrekropper? Kryss av for det varen inneholder:"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <CheckBox
            android:layout_marginTop="10dp"
            android:id="@+id/animal_bodies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maybe_vegetarian_headline"
            android:text="@string/animal_bodies_enumeration" />


        <CheckBox
            android:layout_marginTop="10dp"
            android:id="@+id/red_listed_additives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/animal_bodies"
            android:text="@string/red_listed_ingredients" />

        <CheckBox
            android:layout_marginTop="10dp"
            android:id="@+id/major_unspecified_additives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/red_listed_additives"
            android:text="Uspesifiserte oljer og aromaer" />


        <EditText
            android:id="@+id/obviously_not_vegetarian_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/major_unspecified_additives"
            android:hint="Hva inneholder varen av dyrekropper?" />


        <Button
            android:id="@+id/obviously_not_vegetarian_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/obviously_not_vegetarian_comment"
            android:layout_marginTop="10dp"
            android:text="Videre" />

        <Button
            android:id="@+id/obviously_not_vegetarian_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/obviously_not_vegetarian_comment"
            android:layout_toLeftOf="@+id/obviously_not_vegetarian_next_button"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:text="Avbryt" />

    </RelativeLayout>

</ScrollView>